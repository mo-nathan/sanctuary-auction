<%= render "tabs", tab: "tags" %>

<h1>All Tags</h1>
<% if admin_signed_in? %>
  <p>
    <%= link_to "New Tag", new_tag_path,
        { class: "btn btn-default bg-danger-subtle" } %>
  </p>
  <hr>
<% end %>

<div class="container">
  <div class="row">
    <% Tag.groups.each do |group| %>
      <div class="col-md-4 col-sm-12 mb-3">
        <h4><%= group if group %></h4>
        <% @tags.where(group: group).each do |tag| %>
          <div class="panel panel-default p-1">
            <div class="row">
              <div class="col">
                <%= link_to(tag.name, edit_tag_path(tag),
                    { class: "mb-2 btn btn-default btn-lg bg-info-subtle" }) %><br/>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
