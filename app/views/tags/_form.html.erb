<%= form_with model: tag do |form| %>
  <div class="mt-3">
    <%= form.label :name %><br>
    <%= form.text_field :name, size: 60 %>
    <% tag.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.submit %>
  </div>
<% end %>
