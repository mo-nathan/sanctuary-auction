<%= form_with model: item do |form| %>
  <div class="mt-3">
    <%= form.label :title %><br>
    <%= form.text_field :title, size: 60 %>
    <% item.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :description %><br>
    <%= form.text_area :description, cols: 60, rows: 10 %>
    <% item.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :host %><br>
    <%= form.text_field :host, size: 60 %>
    <% item.errors.full_messages_for(:host).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :timing %><br>
    <%= form.text_field :timing, size: 60 %>
    <% item.errors.full_messages_for(:timing).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :image_url, "Image URL:" %>
    <%= form.text_field :image_url, size: 60 %>
    <% item.errors.full_messages_for(:image_url).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :cost %>
    <%= form.number_field :cost %> Tickets (entering cost makes this an 'Unlimited' item)
  </div>

  <div class="mt-3">
    <%= form.check_box :auction %>
    <%= form.label :auction, "Auction Item" %> (value ignored by 'Unlimited' items)
  </div>

  <div class="mt-3">
    <%= form.label :number %>
    <%= form.number_field :number %>
    <% item.errors.full_messages_for(:number).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3 field">
    <%= form.label :tags %><br>
    <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name do |cb| %>
      <div>
        <%= cb.check_box %>
        <%= cb.label %>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.submit %>
  </div>
<% end %>
