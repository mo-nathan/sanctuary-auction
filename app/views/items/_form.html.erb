<%= form_with model: item do |form| %>
  <div class="mt-3">
    <%= form.label :title %><br>
    <%= form.text_field :title, size: 80 %>
    <% item.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :description %><br>
    <%= form.text_area :description, cols: 80, rows: 10 %>
    <% item.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.check_box :auction %>
    <%= form.label :auction, "Auction Item" %>
  </div>

  <div class="mt-3">
    <%= form.label :image_url, "Image URL:" %>
    <%= form.text_field :image_url, size: 80 %>
  </div>

  <div class="mt-3">
    <%= form.label :cost %>
    <%= form.text_field :cost %> Sanctuary Bucks
  </div>

  <div class="mt-3">
    <%= form.label :number %>
    <%= form.text_field :number %>
    <% item.errors.full_messages_for(:number).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.submit %>
  </div>
<% end %>
