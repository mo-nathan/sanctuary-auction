<h1><%= @item.description %></h1>

<p>
  <% if @item.number %>
    Quantity: <%= @item.number %>
  <% else %>
     Buy in for <%= @item.cost %> SBB
  <% end %>
</p>

<ul>
  <li><%= link_to "Edit Item", edit_item_path(@item) %></li>
  <li><%= link_to "Destroy", item_path(@item), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
  <li><%= link_to "All Items", items_path %></li>
</ul>

<h2>Bids</h2>
<% @item.bids.each do |bid| %>
  <ul>
    <li>
      <strong>Who:</strong>
      <%= link_to bid.user.name, user_path(bid.user.id) %>,
      <strong>Amount:</strong>
      <%= bid.amount %>
    </li>
  </ul>
<% end %>

<h2>Add a bid:</h2>
<%= form_with model: [ @item, @item.bids.build ] do |form| %>
  <p>
    <%= form.label :code %><br>
    <%= form.text_field :code %>
  </p>
  <p>
    <%= form.label :amount %><br>
    <%= form.text_field :amount %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
